{
  "name": "@marioschmidt/design-system-tokens",
  "version": "1.0.0",
  "description": "BILD Design System Token Pipeline with Style Dictionary - Multi-brand design tokens for BILD, SportBILD, and Advertorial",
  "exports": {
    "./css/*": "./dist/css/*",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/css/",
    "docs/css.md"
  ],
  "scripts": {
    "build": "node ../../scripts/tokens/preprocess.js && node ../../scripts/tokens/build.js && node ../../scripts/tokens/bundles.js",
    "clean": "rm -rf dist .tokens"
  },
  "keywords": [
    "design-tokens",
    "style-dictionary",
    "figma",
    "design-system",
    "bild",
    "sportbild",
    "css-variables"
  ],
  "author": "BILD Design System Team",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UXWizard25/bild-design-system.git",
    "directory": "packages/tokens"
  }
}
